{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "auto-imports.d.ts",
    "components.d.ts"
  ],
  "exclude": ["src/**/__tests__/*", "node_modules", "dist", "**/*.js"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
